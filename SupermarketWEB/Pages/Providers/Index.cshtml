@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Index Providers";
}

<h1>PROVEEDORES</h1>

<p>
    <a asp-page="Create" class="btn btn-success">CREAR NUEVO PRODUCTO</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].Document)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Providers[0].Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Providers)

        {
            <tr>
                <td></td>
                <td>@Html.DisplayFor(modelItem => item.Document)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 